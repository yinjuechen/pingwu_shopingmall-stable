<% include ../patrials/header.ejs %>
<div class="container mt-5">
    <div class="row">
        <h1 class="col-12 text-center mt-1 mb-2 pt-3">添加新商品</h1>
        <div style="width: 30%; margin: 0px auto;">
            <form action="/products" , method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">商品名</label>
                    <input class="form-control mr-2" type="text" , placeholder="商品名" name="name">
                </div>
                <div class="form-group">
                    <label for="price">价格</label>
                    <input class="form-control" type="number" name="price", placeholder="价格" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <p>商品图</p>
                    <input type="file" name="local_image" id="local_image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">商品描述</label>
                    <textarea type="text" name="description" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">提交</button>
                </div>
            </form>
            <a class="col-12" href="/products"><i class="fa fa-arrow-left"></i> 返回</a>
        </div>
    </div>
</div>
<% include ../patrials/footer.ejs %>
